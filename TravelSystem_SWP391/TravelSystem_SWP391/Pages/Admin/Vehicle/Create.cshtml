<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vehicle.Name" class="control-label"></label>
                <input asp-for="Vehicle.Name" class="form-control" />
                <span asp-validation-for="Vehicle.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Type" class="control-label"></label>
                <input asp-for="Vehicle.Type" class="form-control" />
