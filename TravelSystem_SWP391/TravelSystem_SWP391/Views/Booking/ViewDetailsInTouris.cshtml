@using System.Globalization;
@using TravelSystem_SWP391.Models;
<body>
    <header>
        <div class="container_12">

            <div class="grid_12">
                <h1><a href="/Home/index"><img src="~/images/LogoSystem.png" alt=""></a></h1>
                <div class="clear"></div>
            </div>
            <div class="menu_block">
                <nav>
                    <ul class="sf-menu">
                        <li class="current"><a href="/Home/index">Home</a></li>
                        <li class="with_ul">
                            <a href="/Home/about">About</a>
                            <ul>
                                <li><a href="/Vehicle/ViewListVehicle">Vehicle</a></li>
                                <li><a href="/Restaurant/ViewListRes">Restaurant</a></li>
                                <li><a href="Hotel/ViewListHotel">Hotel</a></li>
                                <li><a href="/Staff/List">Staff</a></li>
                            </ul>
                        </li>
                        @if (ViewBag.RoleID == "2")
                        {
                            <li class="with_ul">
                                <a href="#">Booking</a>
                                <ul>

                                    <li><a href="/Booking/ViewListBooking">All List Booking </a></li>


                                </ul>
                            </li>
                        }
                        @if (ViewBag.RoleID == "1")
                        {
                            <li class="with_ul">
                                <a href="#">Booking</a>
                                <ul>

                                    <li><a href="/Booking/ViewListBookingVehicleInTourist">List Booking</a></li>



                                    <li><a href="/Booking/ViewHistoryListBooking">Booking History</a></li>

                                </ul>
                            </li>
                        }
                        <li><a href="/Home/gallery">Gallery</a></li>
                        <li><a href="/Tours/tours">Tours</a></li>
                        <li><a href="/Home/contacts">Contacts</a></li>

                    </ul>
                </nav>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </header>
    <div class="main">
        <div class="content">
            <div class="container_12">
                <div class="grid_12">
                    <h3>Details Tour</h3>
                    @{
                        if (ViewBag.bookings.Tour!=null)
                        {
                            <div class="tours">
                                <div class="grid_12 alpha">
                                    <div class="tour">
                                        <img style="height:350px;width:400px;margin-left:33%" src="~/images-tours/@ViewBag.bookings.Tour?.Image" alt="" class="img_inner fleft">
                                        <div class="extra_wrapper">
                                            

                                           

                                           
                                        </div>
                                    </div>
                                </div>




                            </div>

                            <div div class="details">
                                <h2></h2>
                                @if (ViewBag.RoleID=="2"){
                                    <p class="text1">Tên Khách Hàng:@ViewBag.bookings.Name</p>
                                    <p class="text1">Email Khách Hàng:@ViewBag.bookings.Email</p>
                                }
                                <p class="text1">@ViewBag.bookings.Tour?.Description</p>
                                <p class="text1">Chuyến Đi Bắt Đầu Vào : @ViewBag.bookings.StartDate </p>
                                <p class="text1">Số Lượng Người Tham Gia : @ViewBag.bookings.NumPeople </p>
                                <p class="text1">Tên Tour : @ViewBag.bookings.Tour?.Name </p>

                                @if (ViewBag.bookings.Vehicle?.Name ==null)
                                {
                                    <p class="text1">Phương Tiện Được Thuê Trong Chuyến Đi : (Khách Không Thuê) </p>

                                }else{
                                    <div class="grid_12">
                                        <p class="text1">Phương Tiện Được Thuê Trong Chuyến Đi : @ViewBag.bookings.Vehicle?.Name </p>
                                        <img style="height:250px;width:250px;margin-left:33%" src="~/images-vehicle/@ViewBag.bookings.Vehicle?.Image" alt="" class="img_inner fleft">
                                        <p class="text1">Phương Tiện Được Thuê Sẽ Được Đem Tới Khách Sạn Nơi Khách Đặt Và Giá Được Tính Theo Ngày</p>
                                    </div>
                                    
                                }
                                @if (ViewBag.bookings.Hotel?.Name == null)
                                {
                                    <p class="text1">Khách Sạn Được Thuê Trong Chuyến Đi : (Khách Không Thuê) </p>
                                }
                                else
                                {
                                    <div class="grid_12">
                                        <p class="text1">Khách Sạn Được Thuê Trong Chuyến Đi : @ViewBag.bookings.Hotel?.Name </p>
                                        <img style="height:250px;width:250px;margin-left:33%" src="~/images-hotel/@ViewBag.bookings.Hotel?.Image" alt="" class="img_inner fleft">
                                        <p class="text1">Address: @ViewBag.bookings.Hotel?.Address </p>
                                        <p class="text1">Phone: @ViewBag.bookings.Hotel?.Phone </p>
                                    </div>

                                    
                                }
                                @if (ViewBag.bookings.Restaurant?.Name == null)
                                {
                                    <p class="text1">Nhà Hàng Được Thuê Trong Chuyến Đi : (Khách Không Thuê) </p>
                                }
                                else
                                {
                                    <div class="grid_12">
                                        <p class="text1">Nhà Hàng Được Thuê Trong Chuyến Đi : @ViewBag.bookings.Restaurant?.Name </p>
                                        <img style="height:250px;width:250px;margin-left:33%" src="~/images-restaurant/@ViewBag.bookings.Restaurant?.Image" alt="" class="img_inner fleft">
                                        <p class="text1">Price : @ViewBag.bookings.Restaurant?.Price </p>
                                        <p class="text1">Address : @ViewBag.bookings.Restaurant?.Address </p>
                                        <p class="text1">Phone : @ViewBag.bookings.Restaurant?.Phone </p>
                                    </div>
                                    
                                }

                                <p class="text1">Số Ngày Đi :@ViewBag.bookings.Tour?.Duration</p>
                                
                                <p class="text1">Air Plane : @ViewBag.bookings.Tour?.AirPlane </p>

                                <p class="text1">Trạng Thái Tour : @ViewBag.message</p>
                                @{
                                    Double total = @ViewBag.bookings.Tour?.Price * @ViewBag.bookings.NumPeople;
                                    Double total1;
                                    String totalprice = string.Format(new CultureInfo("vi-VN"), "{0:#,##0}", total);
                                    if (ViewBag.message == "Acceptance" || ViewBag.message == "Thanh Toán Thành Công")
                                    {

                                        total1 = Convert.ToDouble(@ViewBag.deposit);
                                    }

                                    else
                                    {
                                        total1 = 0;
                                    }

                                    String total1price = string.Format(new CultureInfo("vi-VN"), "{0:#,##0}", total1);
                                }
                                @if(ViewBag.RoleID=="2"){
                                    @if (ViewBag.message == "Acceptance" || ViewBag.message == "Thanh Toán Thành Công")
                                    {

                                        <p class="text1">Số Tiền Khách Đã Đặt Cọc : @total1price ₫</p>
                                    }
                                    else if (ViewBag.message == "Unacceptance")
                                    {
                                        <p class="text1">Phải Hoàn Lại Tiền Cọc Tour Cho Khách</p>
                                    }
                                    else if (ViewBag.message == "Đã Thanh Toán Tất Cả")
                                    {
                                        <p class="text1">Khách Đã Thanh Toán Toàn Bộ Chi Phí Của Tours</p>
                                    }
                                    else
                                    {
                                        <p class="text1">Khách Chưa Tiến Hành Đặt Cọc!!!</p>
                                    }
                                }
                                else
                                {
                                    @if (ViewBag.message == "Acceptance" || ViewBag.message == "Thanh Toán Thành Công")
                                    {

                                        <p class="text1">Số Tiền Đã Đặt Cọc : @total1price ₫</p>
                                    }
                                    else if (ViewBag.message == "Unacceptance")
                                    {
                                        <p class="text1">Số Tiền Đã Đặt Cọc Đang Được Chờ Xử Lý Để Hoàn Về Cho Quý Khách!!!</p>
                                    }
                                    else if (ViewBag.message == "Đã Thanh Toán Tất Cả")
                                    {
                                        <p class="text1">Quý Khách Đã Thanh Toán Toàn Bộ Chi Phí Của Tours</p>
                                    }
                                    else
                                    {
                                        <p class="text1">Số Tiền Đã Đặt Cọc : Chưa Cọc (Bạn Vui Lòng Thanh Toán Tiền Cọc Để Chuyến Đi Được Xử Lý!!!)</p>
                                    }
                                }
                                @{
                                    String lasttotal = " ";
                                }
                                @if (ViewBag.message == "Đã Thanh Toán Tất Cả")
                                {
                                    lasttotal = string.Format(new CultureInfo("vi-VN"), "{0:#,##0}", 0);
                                }
                                else
                                {
                                    lasttotal = string.Format(new CultureInfo("vi-VN"), "{0:#,##0}", total - total1);
                                }

                                 <p class="text1">Tổng Chi Phí Dự Tính(chi phí phát sinh ngoài tours quý khách sẽ thanh toán trục tiếp cho các staff hoặc từng hạng mục phát sinh) : @totalprice ₫</p>
                                @if (ViewBag.RoleID == "2")
                                {
                                    <p class="text1">Tổng Chi Phí Khách Còn Phải Trả : @lasttotal ₫</p>
                                }
                                else{

                                    <p class="text1">Tổng Chi Phí Còn Phải Trả : @lasttotal ₫</p>
                                    }

                            </div>

                        }
                        else
                        {
                            <p class="text1">Bạn Chưa Chọn Tour Cho Chuyến Đi Này</p>
                        }
                    }
                    

                </div>
                
                <br />
                <div>
                    <div>
                        <h1 style="font-weight:bold; font-size:30px;color:#003c71">Chương Trình Tour Chi Tiết</h1>
                        @{
                            foreach (var t in ViewBag.schedules)
                            {


                                <br />
                                <h2 style="font-weight:bold">@t.ScheduleName </h2>
                                <h4 style="color:black"> @t.ScheduleDescription</h4>
                                if (@t.ScheduleImage != null)
                                {
                                    <img style="height:350px;width:400px;margin-left:33%" src="~/images-schedules/@t.ScheduleImage" alt="">
                                    <p style="text-align:center">@t.Location?.LocationName</p>
                                }

                            }
                        }

                    </div>
                </div>





                <div class="clear"></div>
            </div>
        </div>
        <div class="bottom_block">
            <div class="container_12">
                <div class="grid_2 prefix_2">
                    <ul>
                        <li><a href="#">FAQS Page</a></li>
                        <li><a href="#">People Say</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <ul>
                        <li><a href="#">Useful links</a></li>
                        <li><a href="#">Partners</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <ul>
                        <li><a href="#">Insurance</a></li>
                        <li><a href="#">Family Travel</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <h4>Contact Us:</h4>
                    TEL: 1-800-234-5678<br>
                    <a href="#">info@demolink.org</a>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container_12">
            <div class="grid_12">
                <div class="socials"> <a href="#"></a> <a href="#"></a> <a href="#"></a> <a href="#"></a> </div>
                <div class="copy"> Journey &copy; 2045 | <a href="#">Privacy Policy</a> | Design by: <a href="http://www.templatemonster.com/">TemplateMonster.com</a> </div>
            </div>
            <div class="clear"></div>
        </div>
    </footer>
</body>
</html>