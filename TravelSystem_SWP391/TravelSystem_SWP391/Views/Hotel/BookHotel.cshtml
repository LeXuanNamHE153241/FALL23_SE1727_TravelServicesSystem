<!DOCTYPE html>
<html lang="en">
<head>
    <title>Travel System | Vehicle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/LogoSystem.png">
    <link rel="shortcut icon" href="~/images/LogoSystem.png">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet prefetch" href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css">
    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery-migrate-1.1.1.js"></script>
    <script src="~/js/superfish.js"></script>
    <script src="~/js/jquery.jqtransform.js"></script>
    <script src="~/js/jquery.equalheights.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.ui.totop.js"></script>
    <script>
        $(window).load(function () {
            $().UItoTop({
                easingType: 'easeOutQuart'
            });
        });
        $(function () {
            $(".form1").jqTransform();
        });
    </script>
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <link rel="stylesheet" media="screen" href="css/ie.css">
    <![endif]-->
    <script language="javascript">

        document.getElementById("btn1").onclick = function () {
            var checkbox = document.getElementsByName("gender");
            for (var i = 0; i < checkbox.length; i++) {
                if (checkbox[i].checked === true) {
                    alert(checkbox[i].value);
                }
            }
        };
        function doDelete(ID) {
            if (confirm("are you sure? IDHOTEL=" + ID)) {
                window.location = "/Hotel/deletehotel?id=" + ID;

            }
        }


    </script>
</head>
<body>
    <header>

        <div class="container_12">
            <div class="grid_12">
                <h1><a href="/Home/index"><img src="~/images/LogoSystem.png" alt=""></a></h1>
                <div class="clear"></div>
            </div>
            <div class="menu_block">
                <nav>
                    <ul class="sf-menu">
                        <li class="current"><a href="/Home/index">Home</a></li>
                        <li class="with_ul">
                            <a href="/Home/about">About</a>
                            <ul>
                                <li><a href="/Vehicle/ViewListVehicle">Vehicle</a></li>
                                <li><a href="#">Restaurant</a></li>
                                <li><a href="#">Hotel</a></li>
                                <li><a href="#">Staff</a></li>
                            </ul>
                        </li>
                        <li><a href="/Home/gallery">Gallery</a></li>
                        <li><a href="/Tours/tours">Tours</a></li>
                        <li><a href="/Home/contacts">Contacts</a></li>

                    </ul>
                </nav>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </header>
    <div class="main">
        <div class="content">
            <div class="container_12">
                <div class="grid_9">
                    <h3>@ViewBag.Hotel.Name</h3>
                    <p style="font-size:35px" class="text1">Rating: </p>
                    <p class="price">

                        <div class="stars">
                            @for (int i = 0; i < @ViewBag.Hotel.Rating; i++)
                            {
                                <img style="height:60px;width:60px" src="~/images-vehicle/star.jpg" />
                            }
                        </div>
                    </p>
                    <div class="tours">
                        <img style="height:450px;width:650px" src="~/images-vehicle/@ViewBag.Hotel.Image" alt="" class="img_inner fleft">


                    </div>
                </div>

                <div class="grid_3">

                    <h3>Details Hotel </h3>

                    <div class="extra_wrapper">
                        <p style="font-size:20px;padding:5px" class="price">Address: @ViewBag.Hotel.Address</p>
                        <p style="font-size:20px;padding:5px" class="price">City: @ViewBag.Hotel.City</p>
                        <p style="font-size:20px;padding:5px" class="price">Country: @ViewBag.Hotel.Country</p>
                        <p style="font-size:20px;padding:5px" class="price">Phone:@ViewBag.Hotel.Phone</p>
                        <p style="font-size:20px;padding:5px" class="price">Review:@ViewBag.Hotel.Review</p>
                        <p style="font-size:20px;padding:5px" class="price">RoomTypes:@ViewBag.Hotel.RoomTypes</p>
                        <p style="font-size:20px;padding:5px" class="price">Amenities:@ViewBag.Hotel.Amenities</p>


                    </div>




                </div>

                <form action="BookHotelAccess" class="signin-form" method="post">
                    <div class="form-group">
                        <h1>Email:</h1>
                        <div class="form-group">
                            <input id="password-field" type="text" class="form-control" value="@ViewBag.UserBook.Email" required name="Email">

                        </div>
                        <h1>Name User Booking:</h1>
                        <div class="form-group">
                            <input id="password-field" type="text" class="form-control" value="@ViewBag.UserBook.FirstName @ViewBag.UserBook.LastName" required name="NameUser">

                        </div>

                        <h1>Phone:</h1>
                        <div class="form-group">
                            <input id="password-field" type="text" class="form-control" value="@ViewBag.UserBook.PhoneNumber" required name="Phone">

                        </div>
                        <h1>Name Hotel:</h1>
                        <div class="form-group">
                            <input id="password-field" type="text" class="form-control" value="@ViewBag.Hotel.Name" required name="NameHotel">

                        </div>
                        <h1>Start Date:</h1>
                        <input type="date" name="stdate">
                        <h1>End Date:</h1>
                        <input type="date" name="edate">
                        <h1>Id Hotel:</h1>
                        <div class="form-group">
                            <input id="password-field" type="text" class="form-control" value="@ViewBag.Hotel.Id" required name="IdHotel">

                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit px-3">BOOK HOTEL</button>
                        </div>
                    </div>


                </form>

                <div style="text-align:center;font-size:28px ; color:green ; padding:50px" class="grid_12">
                    <a href="/Hotel/ViewListHotel">Back View List Hotel</a>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="bottom_block">
            <div class="container_12">
                <div class="grid_2 prefix_2">
                    <ul>
                        <li><a href="#">FAQS Page</a></li>
                        <li><a href="#">People Say</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <ul>
                        <li><a href="#">Useful links</a></li>
                        <li><a href="#">Partners</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <ul>
                        <li><a href="#">Insurance</a></li>
                        <li><a href="#">Family Travel</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <h4>Contact Us:</h4>
                    TEL: 1-800-234-5678<br>
                    <a href="#">info@demolink.org</a>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container_12">
            <div class="grid_12">
                <div class="socials"> <a href="#"></a> <a href="#"></a> <a href="#"></a> <a href="#"></a> </div>
                <div class="copy"> Journey &copy; 2045 | <a href="#">Privacy Policy</a> | Design by: <a href="http://www.templatemonster.com/">TemplateMonster.com</a> </div>
            </div>
            <div class="clear"></div>
        </div>
    </footer>
</body>
</html>
