    <div class="main">
        <div class="content">
            <p style="text-align: center; font-size: 30px">Enter Information of Staff</p>
            <div class="container_12">

                <div class="form-container">
                    <form action="Add" style="text-align: center; line-height: 30px;" class="cf" method="post">
                        <div class="half left cf">

                            <div asp-for="EmailUserNavigation.Email" class="container-field" style="font-size: 20px">
                                Email: <input type="email" name="EmailUserNavigation.Email">
                            </div>
                            <div asp-for="EmailUserNavigation.Password" class="container-field" style="font-size: 20px">
                                Password: <input type="text" name="EmailUserNavigation.Password">
                            </div>
                            <div asp-for="EmailUserNavigation.FirstName" class="container-field" style="font-size: 20px">
                                First Name: <input type="text" name="EmailUserNavigation.Firstname">
                            </div>
                            <div asp-for="EmailUserNavigation.LastName" class="container-field" style="font-size: 20px">
                                Last Name: <input type="text" name="EmailUserNavigation.Lastname">
                            </div>
                            <div asp-for="EmailUserNavigation.PhoneNumber" class="container-field" style="font-size: 20px">
                                Phone: <input type="text" name="EmailUserNavigation.PhoneNumber">
                            </div>

                            <div class="container-field" style="font-size: 20px" >
                                Description: <textarea asp-for="EmailUserNavigation.Description" name="EmailUserNavigation.Description" type="text" id="inputDescription"></textarea>
                            </div>

                            <div style="font-size: 20px"> Gender:</div>
                            <select class="container-field" style="font-size: 20px" asp-for="EmailUserNavigation.Gender" name="EmailUserNavigation.Gender">
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                            <br />

                            <div style="font-size: 20px"> Role Staff: </div>
                            <select class="container-field" style="font-size: 20px" asp-for="RoleStaff" name="RoleStaff">
                                <option>Hotel Staff</option>
                                <option>Restaurant Staff</option>
                                <option>Tour Guide</option>
                                <option>Driver Staff</option>
                                <option>Driver Staff</option>
                            </select>
                        </div>
                        <input type="submit" value="Add Staff" id="input-submit">
                    </form>
                </div>
            </div><!-- /.container -->

                <!-- Liên kết đến Bootstrap JS và các tệp script khác -->
