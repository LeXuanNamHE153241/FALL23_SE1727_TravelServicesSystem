<!DOCTYPE html>
<html lang="en">
<head>
    <title>Travel System | Tours</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <link rel="icon" href="~/images/LogoSystem.png">
    <link rel="shortcut icon" href="~/images/LogoSystem.png">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet prefetch" href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css">
    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery-migrate-1.1.1.js"></script>
    <script src="~/js/superfish.js"></script>
    <script src="~/js/jquery.jqtransform.js"></script>
    <script src="~/js/jquery.equalheights.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.ui.totop.js"></script>
    <script>
        $(window).load(function () {
            $().UItoTop({
                easingType: 'easeOutQuart'
            });
        });
        $(function () {
            $(".form1").jqTransform();
        });
    </script>
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <link rel="stylesheet" media="screen" href="css/ie.css">
    <![endif]-->
    <script language="javascript">

        document.getElementById("btn1").onclick = function () {
            var checkbox = document.getElementsByName("gender");
            for (var i = 0; i < checkbox.length; i++) {
                if (checkbox[i].checked === true) {
                    alert(checkbox[i].value);
                }
            }
        };
        function doDelete(ID) {
            if (confirm("are you sure? IDRestaurant=" + ID)) {
                window.location = "/Restaurant/deleterestaurant?id=" + ID;

            }
        }


    </script>
</head>
<body>
    <header>
        
        @{
            if (ViewBag.mess == "1")
            {
                <div style="color:green; font-size:30px">Booking success!!!</div>
            }
        }
        <div class="container_12">
            <div class="grid_12">
                <h1><a href="/Home/index"><img src="~/images/LogoSystem.png" alt=""></a></h1>
                <div class="clear"></div>
            </div>
            <div class="menu_block">
                <nav>
                    <ul class="sf-menu">
                        <li class="current"><a href="/Home/index">Home</a></li>
                        <li class="with_ul">
                            <a href="/Home/about">About</a>
                            <ul>
                                <li><a href="/Vehicle/ViewListVehicle">Vehicle</a></li>
                                <li><a href="/Restaurant/ViewListRes">Restaurant</a></li>
                                <li><a href="/Hotel/ViewListHotel">Hotel</a></li>
                                    
                            </ul>
                        </li>
                        @if (ViewBag.RoleID == "2")
                        {
                            <li class="with_ul">
                                <a href="#">Booking</a>
                                <ul>
                                    <li><a href="/Booking/ViewListBooking">Booking Vehicle</a></li>
                                    <li><a href="/Restaurant/ViewListRes">Booking Restaurant</a></li>
                                    <li><a href="#">Booking Hotel</a></li>
                                    <li><a href="#">Booking Staff</a></li>
                                </ul>
                            </li>

                        }
                        <li><a href="/Home/gallery">Gallery</a></li>
                        <li><a href="/Tours/tours">Tours</a></li>
                        <li><a href="/Home/contacts">Contacts</a></li>

                    </ul>
                </nav>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </header>
    <div class="main">
        <div class="content">
            <div class="container_12">
                <div class="grid_9">
                    <h3>View List Restaurant</h3>
                    <div class="tours">
                        @{
                            foreach (var c in ViewBag.ListRestaurant)
                            {
                                <div class="grid_4 alpha">
                                    <div class="tour">
                                        <img style="height:150px;width:150px" src="~/images-restaurant/@c.Image" alt="" class="img_inner fleft">
                                        <div class="extra_wrapper">
                                            <p class="text1">ID Restaurant:@c.Id </p>
                                            <p class="text1">@c.Name </p>

                                            <p class="price">Address:@c.Address <span>From @c.Price</span></p>
                                            <p class="text1">Phone:@c.Phone </p>
                                            <p class="text1">Rate: </p>
                                            <p class="price">

                                                <div class="stars">
                                                    @for (int i = 0; i < @c.Rate; i++)
                                                    {
                                                        <img src="~/images-vehicle/star.jpg" />
                                                    }
                                                </div>
                                            </p>

                                            

                                            @if (ViewBag.RoleID == "2")
                                            {
                                                <a href="/Restaurant/editrestaurantaccess?name=@c.Name" class="btn">Edit</a>
                                                <a href="#" onclick="doDelete(@c.Id)" class="btn">Delete</a>
                                            }

                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>

                <div class="grid_3">

                    <h3>Search Restaurant </h3>
                    <form action="SearchRestaurant" method="post">
                        <input style="margin-bottom:4px" type="text" required name="namerestaurant" /><br />
                        <input type="submit" value="Search By Name" />
                    </form>


                </div>
                @if (ViewBag.RoleID == "2")
                {
                    <div style="text-align:center;font-size:28px ; color:green" class="grid_12">
                        <a href="/Restaurant/additemres">add item</a>
                    </div>
                }
                <div class="clear"></div>
            </div>
        </div>
        <div class="bottom_block">
            <div class="container_12">
                <div class="grid_2 prefix_2">
                    <ul>
                        <li><a href="#">FAQS Page</a></li>
                        <li><a href="#">People Say</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <ul>
                        <li><a href="#">Useful links</a></li>
                        <li><a href="#">Partners</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <ul>
                        <li><a href="#">Insurance</a></li>
                        <li><a href="#">Family Travel</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <h4>Contact Us:</h4>
                    TEL: 1-800-234-5678<br>
                    <a href="#">info@demolink.org</a>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container_12">
            <div class="grid_12">
                <div class="socials"> <a href="#"></a> <a href="#"></a> <a href="#"></a> <a href="#"></a> </div>
                <div class="copy"> Journey &copy; 2045 | <a href="#">Privacy Policy</a> | Design by: <a href="http://www.templatemonster.com/">TemplateMonster.com</a> </div>
            </div>
            <div class="clear"></div>
        </div>
    </footer>
</body>
</html>