<body class="img js-fullheight">


    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">VNPAY RESPONSE</h2>
                </div>
            </div>


            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">

                        @{
                            if (ViewBag.mess1 != null)
                            {
                                <h5 style="z-index:999;font-size:20px;color:red;font-weight:700;text-shadow: black 0.1em 0.1em 0.2em">@ViewBag.mess1 </h5>
                            }
                        }
                        <form action="RequestPay" class="signin-form" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Name-Vehicle" value="Mã Đơn Hàng: @ViewBag.vnp_TxnRef" required name="vnp_TxnRef">
                            </div>

                            <div class="form-group">
                                <input id="password-field" type="text" class="form-control" placeholder="Type" value="Số Tiền: @ViewBag.vnp_Amount" required name="vnp_Amount">

                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Price" value="Nội Dung Thanh Toán: @ViewBag.vnp_OrderInfo" required name="vnp_OrderInfo">
                            </div>
                           

                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Rate" value="Mã Phản Hồi : @ViewBag.vnp_ResponseCode" required name="rate">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Description" value="Mã Giao Dịch Tại VNPAY : @ViewBag.vnp_TransactionNo" required name="">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Description" value="Mã  Ngân Hàng : @ViewBag.vnp_BankCode" required name="">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Description" value="Thời Gian Thanh Toán : @ViewBag.vnp_PayDate" required name="">
                            </div>
                            @{
                                if (ViewBag.vnp_ResponseCode == "00")
                                {
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Description" value="Kết Quả : Thành Công" required name="cf_status">
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Description" value="Kết Quả :Không Thành Công" required name="cf_status">
                                    </div>
                                }
                            }
                           
                           <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Back To Home</button>

                            </div>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
