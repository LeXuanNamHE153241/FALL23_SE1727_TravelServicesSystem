@model TravelSystem_SWP391.Models.User
@using TravelSystem_SWP391
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>VNPAY DEMO</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
     <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

 
    <div class="jumbotron">
    <h1>VNPAY </h1>
</div>

 @{
                            if (ViewBag.mess != null)
                            {
                                <h5 style="z-index:999;font-size:20px;color:red;font-weight:700;">@ViewBag.mess </h5>
                            }
                        }
<div class="table-responsive">
    
    <form action="/Payment/CreatePaymentUrl?id=@ViewBag.ID&&deposit=@ViewBag.deposit&&costsremaining=@ViewBag.costsremaining" id="frmCreateOrder" method="POST">
        <div class="form-group">
            <label for="ordertype">Đặt Cọc </label>
            <select name="OrderType" id="ordertype" class="form-control">
                <option value="electric">Phương Tiện</option>
                <option value="fashion">Khách Sạn</option>
                <option value="other">Tour</option>
                <option value="other"></option>
            </select>
        </div>
        <br/>
        <div class="form-group">
            <label  for="Name">Tên khách hàng</label>
            <input disabled class="form-control"
                   id="Name"
                   name="Name"
                   type="text"
                   
                   value="@ViewBag.Booking.Name">
        </div>
        <br/>
        <div class="form-group">
            <label for="Amount">Số tiền</label>
             @if(@ViewBag.deposit!=null){
                     <input  class="form-control"
                   id="Amount"
                   name="Amount"
                   type="text"
                  
                    value="@ViewBag.deposit">
                }
                else{

                     <input  class="form-control"
                   id="Amount"
                   name="Amount"
                   type="text"
                  
                value="@ViewBag.costsremaining">
                    }

        </div>
        <br/>
        <div class="form-group">
            <label for="OrderDescription">Nội dung thanh toán</label>
            <textarea class="form-control" 
                      cols="20" 
                      id="OrderDescription" 
                      name="OrderDescription" 
                      rows="2">Thanh toán tại TravelSystem</textarea>
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Thanh toán (Checkout)</button>
    </form>
    
</div>
    </div>

</body>
</html>