<!DOCTYPE html>
<html lang="en">
<head>
    <title>Travel System | Tours |Search</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/LogoSystem.png">
    <link rel="shortcut icon" href="~/images/LogoSystem.png">
    <link rel="stylesheet" href="~/css/style.css">

    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery-migrate-1.1.1.js"></script>
    <script src="~/js/superfish.js"></script>
    <script src="~/js/jquery.jqtransform.js"></script>
    <script src="~/js/jquery.equalheights.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.ui.totop.js"></script>
    <script>

        document.getElementById("otel").addEventListener("change", function () {
            var selectedValue = this.value;
            // Thực hiện xử lý dựa trên lựa chọn người dùng ở đây
            console.log("Lựa chọn của bạn là: " + selectedValue);
        });

    </script>
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <link rel="stylesheet" media="screen" href="css/ie.css">
    <![endif]-->

</head>
<body>
    <header>
        <div class="container_12">

            <div class="grid_12">
                <h1><a href="/Home/index"><img src="~/images/LogoSystem.png" alt=""></a></h1>
                <div class="clear"></div>
            </div>
            <div class="menu_block">
                <nav>
                    <ul class="sf-menu">
                        <li class="current"><a href="/Home/index">Home</a></li>
                        <li class="with_ul">
                            <a href="/Home/about">About</a>
                            <ul>
                                <li><a href="/Vehicle/ViewListVehicle">Vehicle</a></li>
                                <li><a href="#">Restaurant</a></li>
                                <li><a href="#">Hotel</a></li>
                                <li><a href="#">Staff</a></li>
                            </ul>
                        </li>
                        <li><a href="/Home/gallery">Gallery</a></li>
                        <li><a href="/Tours/tours">Tours</a></li>
                        <li><a href="/Home/contacts">Contacts</a></li>

                    </ul>
                </nav>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </header>
    <div class="main">
        <div class="content">


            <p style="text-align: center; font-size: 30px">Detail of Tour booking</p>
            <div class="container_12">

                <div class="detail-container">
                    <div class="detail-info">
                        <p><strong>Tour Name: </strong> @ViewBag.NewTour.Name</p>
                        <p><strong>Price: </strong> @ViewBag.NewTour.Price</p>
                        <p><strong>Air Plane: </strong> @ViewBag.NewTour.AirPlane</p>
                        <p><strong>Rating: </strong> @ViewBag.NewTour.Rating / 5</p>
                        <p><strong>Duration: </strong> @ViewBag.NewTour.Duration</p>

                        <p>
                            <strong>Book Hotel: </strong>
                            <select id="otel" class="container-field" style="font-size: 20px" asp-for="Hotel" name="Hotel">
                                <option><p>--Select--</p></option>
                                @foreach (var c in @ViewBag.ListHotelTour)
                                {
                                    <option value="@c.Name"><p><strong>@c.Name</strong></p></option>
                                }

                            </select>
                        </p>

                        <p>
                            <strong>Book Restaurant: </strong>
                            <select id="Restaurant" class="container-field" style="font-size: 20px" asp-for="Restaurant" name="Restaurant">
                                <option><p>--Select--</p></option>
                                @foreach (var c in @ViewBag.ListRestaurantTour)
                                {
                                    <option value="@c.Name"><p><strong>@c.Name</strong></p></option>
                                }

                            </select>
                        </p>

                        <p>
                            <strong>Book Vehicle: </strong>
                            <select id="Vehicle" class="container-field" style="font-size: 20px" asp-for="Vehicle" name="Vehicle">
                                <option><p>--Select--</p></option>
                                @foreach (var c in @ViewBag.ListVehicleTour)
                                {
                                    <option value="@c.Name"><p><strong>@c.Name</strong></p></option>
                                }

                            </select>
                        </p>

                        <p>
                            <strong>Book Staff: </strong>
                            <select id="Staff" class="container-field" style="font-size: 20px" asp-for="Staff" name="Staff">
                                <option><p>--Select--</p></option>
                                @foreach (var c in @ViewBag.ListStaffTour)
                                {
                                    <option value="@c.EmailUserNavigation.Email"><p><strong>@c.EmailUserNavigation.FirstName @c.EmailUserNavigation.LastName</strong></p></option>
                                }

                            </select>
                        </p>

                    </div>
                </div>
                <div class="form-container">
                    <form action="AddResponse" style="text-align: center; line-height: 30px;" class="cf" method="post">
                        <div class="half left cf">

                            <div asp-for="Email" class="container-field" style="font-size: 20px">
                                <input style="display: none" name="Email" @*value="@Model.Feedback.Email"*@>
                            </div>
                            <div asp-for="Name" class="container-field" style="font-size: 20px">
                                <input style="display: none" name="Name" @*value="@Model.Feedback.Name"*@>
                            </div>
                            <div asp-for="Subject" class="container-field" style="font-size: 20px">
                                <input style="display: none" name="Subject" @*value="@Model.Feedback.Subject"*@>
                            </div>
                            <div asp-for="Message" class="container-field" style="font-size: 20px">
                                <input style="display: none" name="Message" @*value="@Model.Feedback.Message"*@>
                            </div>
                            <div asp-for="Response" class="container-field" style="font-size: 20px">
                                Response: <input type="text" name="Response">
                            </div>

                        </div>
                        <input type="submit" value="Book this tour" id="input-submit">
                    </form>
                </div>
            </div>


        </div>
        <div class="bottom_block">
            <div class="container_12">
                <div class="grid_2 prefix_2">
                    <ul>
                        <li><a href="#">FAQS Page</a></li>
                        <li><a href="#">People Say</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <ul>
                        <li><a href="#">Useful links</a></li>
                        <li><a href="#">Partners</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <ul>
                        <li><a href="#">Insurance</a></li>
                        <li><a href="#">Family Travel</a></li>
                    </ul>
                </div>
                <div class="grid_2">
                    <h4>Contact Us:</h4>
                    TEL: 1-800-234-5678<br>
                    <a href="#">info@demolink.org</a>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container_12">
            <div class="grid_12">
                <div class="socials"> <a href="#"></a> <a href="#"></a> <a href="#"></a> <a href="#"></a> </div>
                <div class="copy"> Journey &copy; 2045 | <a href="#">Privacy Policy</a> | Design by: <a href="http://www.templatemonster.com/">TemplateMonster.com</a> </div>
            </div>
            <div class="clear"></div>
        </div>
    </footer>
</body>
</html>